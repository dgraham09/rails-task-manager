<div class="form-group">
  <%= form_with model: @task do |form| %>
    <%= form.label(:query, "Title") %>
    <%= form.text_field(:title, class:"form-control") %>
    <%= form.label(:query,"Details") %>
    <%= form.text_field(:details, class:"form-control") %>
    <%= form.label(:query,"Completed") %>
    <%= form.check_box(:completed, class:"form-checkbox")%>
    <%= form.submit "Update" %>
  <% end %>
</div>
