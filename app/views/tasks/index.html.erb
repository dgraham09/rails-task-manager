<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
  <input type="checkbox" <%=task.completed ? 'checked' : false%>>
      <%= link_to task.title, task_path(task) %>
  </li>
  <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</ul>
<%= link_to "Add a new task", new_task_path, {:class=> "btn btn-primary ms-4"} %>
